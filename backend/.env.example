# Server Configuration
PORT=3000
NODE_ENV=development

# Database (SQLite for local dev)
DATABASE_URL="file:./dev.db"

# For PostgreSQL (uncomment and use in production):
# DATABASE_URL="postgresql://user:password@localhost:5432/attendance_db?schema=public"

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# QR Token Secret (generate a strong random string)
QR_SECRET=your-qr-signing-secret-change-this-in-production

# QR Token Expiry (in seconds)
QR_TOKEN_EXPIRY=300

# Public Backend URL (set this to your ngrok URL when using ngrok)
# Example: PUBLIC_BACKEND_URL=https://1234-xxxx.ngrok.io
PUBLIC_BACKEND_URL=http://localhost:3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Cookie Settings
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# For ngrok HTTPS testing, set:
# COOKIE_SECURE=true
# COOKIE_SAME_SITE=none
